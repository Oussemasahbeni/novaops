# ==============================================================
# NovaOps Docker Environment Configuration Example
# ==============================================================

# --- Service URLs ---
CONFIG_SERVER_URL=http://config-server:8888
EUREKA_URL=http://discovery-server:8761/eureka/
KEYCLOAK_URL=http://keycloak:8080
KEYCLOAK_ISSUER_URI=http://keycloak:8080/realms/novaops

# --- Database Configuration ---
DB_URL=jdbc:postgresql://postgres:5432/novaops
DB_USERNAME=username
DB_PASSWORD=password

# --- Redis Configuration ---
REDIS_HOST=redis

# --- Kafka Configuration ---
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_GROUP_ID_USER_SERVICE=user-service-group

# --- MailDev Configuration ---
MAIL_HOST=mail-dev
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=

# --- Keycloak Client Configuration ---
KEYCLOAK_CLIENT_ID=novaops-backend
KEYCLOAK_CLIENT_SECRET=<your-keycloak-client-secret>
DEFAULT_USER_PASSWORD=<a-default-password>

# --- CORS and Frontend Configuration ---
FRONTEND_URL=http://localhost:4200